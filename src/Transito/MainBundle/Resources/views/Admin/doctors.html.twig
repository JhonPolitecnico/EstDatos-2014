{% extends "TransitoMainBundle:Admin:layout.html.twig" %}
{% use "TransitoMainBundle:Admin:modal.inc.twig" %}
{% set title = 'Medicos y funcionarios' %}
{% set page_title = title %}
{% set page_subtitle = 'Punto de atención: <b>' ~ pau.getName() ~ '</b>' %}
{% block page_content %}
    <div class="row">
        <div class="col-md-12">
            <!-- start: TABLE WITH IMAGES PANEL -->
            <div class="panel panel-white">
                <div class="panel-body">
                    <p>Medicos</p>
                    <table class="table table-striped table-hover" id="sample-table-2">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Número de documento</th>
                                <th>Nombre</th>
                                <th>Fecha de Nacimiento</th>
                                <th>Dirección</th>
                                <th>Teléfono fijo</th>
                                <th>Celular</th>
                                <th>Correo Electrónico</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for doctor in doctors %}
                                <tr>
                                    <td>{{ doctor.getId() }}</td>
                                    <td>{{ doctor.getDni() }}</td>
                                    <td>{{ doctor.getName() }}</td>
                                    <td>{{ doctor.getBirthday() }}</td>
                                    <td>{{ doctor.getLocation() }}</td>
                                    <td>{{ doctor.getPhone() }}</td>
                                    <td>{{ doctor.getCellphone() }}</td>
                                    <td>{{ doctor.getEmail() }}</td>

                                    <td class="center">
                                        <div class="visible-md visible-lg hidden-sm hidden-xs">
                                            <a href="{{ path('worker_details_page', {'worker': doctor.getId()}) }}" class="btn btn-xs btn-blue tooltips" data-placement="top" data-original-title="Detalles"><i class="fa fa-suitcase"></i></a>
                                        </div>
                                        <div class="visible-xs visible-sm hidden-md hidden-lg">
                                            <div class="btn-group">
                                                <a class="btn btn-green dropdown-toggle btn-sm" data-toggle="dropdown" href="#">
                                                    <i class="fa fa-cog"></i> <span class="caret"></span>
                                                </a>
                                                <ul role="menu" class="dropdown-menu pull-right dropdown-dark">
                                                    <li>
                                                        <a role="menuitem" tabindex="-1" href="{{ path('worker_details_page', {'worker': doctor.getId()}) }}">
                                                            <i class="fa fa-suitcase"></i> Detalles
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- end: TABLE WITH IMAGES PANEL -->

            <a class="btn btn-green btn-lg btn-block" href="{{ path('worker_new_page', {'type': 'doctor', 'pau': pau.getId()}) }}">
                Agregar nuevo medico <i class="fa fa-arrow-circle-right"></i>
            </a>
            <br />
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <!-- start: TABLE WITH IMAGES PANEL -->
            <div class="panel panel-white">
                <div class="panel-body">
                    <p>Funcionarios</p>
                    <table class="table table-striped table-hover" id="sample-table-2">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Número de documento</th>
                                <th>Nombre</th>
                                <th>Fecha de Nacimiento</th>
                                <th>Dirección</th>
                                <th>Teléfono fijo</th>
                                <th>Celular</th>
                                <th>Correo Electrónico</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for official in officials %}
                                <tr>
                                    <td>{{ official.getId() }}</td>
                                    <td>{{ official.getDni() }}</td>
                                    <td>{{ official.getName() }}</td>
                                    <td>{{ official.getBirthday() }}</td>
                                    <td>{{ official.getLocation() }}</td>
                                    <td>{{ official.getPhone() }}</td>
                                    <td>{{ official.getCellphone() }}</td>
                                    <td>{{ official.getEmail() }}</td>

                                    <td class="center">
                                        <div class="visible-md visible-lg hidden-sm hidden-xs">
                                            <a href="{{ path('worker_details_page', {'worker': official.getId()}) }}" class="btn btn-xs btn-blue tooltips" data-placement="top" data-original-title="Detalles"><i class="fa fa-suitcase"></i></a>
                                        </div>
                                        <div class="visible-xs visible-sm hidden-md hidden-lg">
                                            <div class="btn-group">
                                                <a class="btn btn-green dropdown-toggle btn-sm" data-toggle="dropdown" href="#">
                                                    <i class="fa fa-cog"></i> <span class="caret"></span>
                                                </a>
                                                <ul role="menu" class="dropdown-menu pull-right dropdown-dark">
                                                    <li>
                                                        <a role="menuitem" tabindex="-1" href="{{ path('worker_details_page', {'worker': official.getId()}) }}">
                                                            <i class="fa fa-suitcase"></i> Detalles
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- end: TABLE WITH IMAGES PANEL -->

            <a class="btn btn-green btn-lg btn-block" href="{{ path('worker_new_page', {'type': 'official', 'pau': pau.getId()}) }}">
                Agregar nuevo funcionario <i class="fa fa-arrow-circle-right"></i>
            </a>
            <br />
        </div>
    </div>

{% endblock %}