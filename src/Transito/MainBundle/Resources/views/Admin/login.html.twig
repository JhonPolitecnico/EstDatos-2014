		<script src="{{ asset('rapido/assets/plugins/jquery-ui/jquery-ui-1.10.2.custom.min.js') }}"></script>
		<script src="{{ asset('rapido/assets/plugins/bootstrap/js/bootstrap.min.js') }}"></script>
		<script src="{{ asset('rapido/assets/plugins/iCheck/jquery.icheck.min.js') }}"></script>
		<script src="{{ asset('rapido/assets/plugins/jquery.transit/jquery.transit.js') }}"></script>
		<script src="{{ asset('rapido/assets/js/main.js') }}"></script>
		<!-- end: MAIN JAVASCRIPTS -->
		<!-- start: JAVASCRIPTS REQUIRED FOR THIS PAGE ONLY -->
		<script src="{{ asset('rapido/assets/plugins/jquery-validation/dist/jquery.validate.min.js') }}"></script>
                <script src="{{ asset('rapido/assets/plugins/jquery-validation/localization/messages_es.js') }}"></script>
		<script src="{{ asset('rapido/assets/js/login.js') }}"></script>
