{% extends "TransitoMainBundle:Admin:layout.html.twig" %}
{% set title = 'Iniciar sesión' %}
{% set body_class = 'login' %}
{% block body %}
		<div class="main-login col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
			<div class="logo">
				<img src="{{ asset('rapido/assets/images/logo.png') }}">
			</div>
			<!-- start: LOGIN BOX -->
			<div class="box-login">
                            {% if errors is not empty %}
                                <div class="alert alert-danger">
                                        <button data-dismiss="alert" class="close">
                                                &times;
                                        </button>
                                        <strong>Opps!</strong>
                                        {% for error in errors %}
                                            <p>{{ error.message }}</p>
                                        {% endfor %}
                                </div>
                                {% endif %}
				<h3>Inicie sesión en su cuenta</h3>
				<p>
					Por favor, introduzca su nombre y contraseña para entrar
				</p>
				<form class="form-login" action="{{ path('login_page') }}" method="post">
					<div class="errorHandler alert alert-danger no-display">
						<i class="fa fa-remove-sign"></i> Usted tiene algunos errores. Por favor, consulte más abajo.
					</div>
					<fieldset>
						<div class="form-group">
							<span class="input-icon">
								<input type="text" class="form-control" name="{{ form.username.vars.full_name }}" placeholder="Nombre de usuario">
								<i class="fa fa-user"></i> </span>
						</div>
						<div class="form-group form-actions">
							<span class="input-icon">
								<input type="password" class="form-control password" name="{{ form.password.vars.full_name }}" placeholder="Contraseña">
								<i class="fa fa-lock"></i>
                                                        </span>
						</div>
						<div class="form-actions">
							<button type="submit" class="btn btn-green pull-right">
								Iniciar sesión <i class="fa fa-arrow-circle-right"></i>
							</button>
						</div>
					</fieldset>
                                        {{ form_widget(form._token) }}
				</form>
				<!-- start: COPYRIGHT -->
				<div class="copyright">
					{{ copy|raw }}
				</div>
				<!-- end: COPYRIGHT -->
			</div>
			<!-- end: LOGIN BOX -->
		</div>
		<!-- start: MAIN JAVASCRIPTS -->
